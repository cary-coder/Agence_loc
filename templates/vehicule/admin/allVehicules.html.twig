{% extends 'layout.html.twig' %}
{% block title %} {{ parent() }} -vehicules {%
endblock %} 

{% block content %} 
<div class="row d-flex justify-content-center text-center">
      <h1> Liste des vehicules </h1>
{#por chaque vehicule de mon tableau des vehicules je crée une ligne avec les infos de l'vehicule en question#}
<table class="table table-striped" border="2">
      <thead>
       <tr align="center">
            <th scope="col">Id</th>
            <th scope="col">titre</th>
            <th scope="col">marque</th>
            <th scope="col">model</th>
            <th scope="col">description</th>
            <th scope="col">photo</th>
            <th scope="col">prix journalier €</th>
            <th scope="col">date d'eregistrement</th>
            <th scope="col">action</th>
       </tr>
      </thead>
{%for vehicule in vehicules %}
      <tr align="center">
            <td>{{vehicule.id}}</td>
            <td>{{vehicule.titre}}</td>
            <td>{{vehicule.marque}}</td>
            <td>{{vehicule.model}}</td>
            <td align="left">{{vehicule.description| slice(0,100)}}</td>
            <td><img class="img-thumbnail" src="{{asset('photosVehicules/' ~ vehicule.photo)}}" alt="{{vehicule.photo}}"></td>
            <td>{{vehicule.prixJournalier}}</td>
            <td>{{vehicule.DateEnregistrement| date("d/m/Y \à H\\hi")}}</td>
            <td>
                  <a href="{{ path("app_vehicule", {id: vehicule.id})}}"><i class="fa fa-eye mx-1 text-success"></i></a>
                  <a href="{{ path("admin_vehicule_update", {id: vehicule.id})}}"><i class="fa fa-edit mx-1 text-success"></i></a>
                  <a href="{{ path("admin_vehicule_delete", {id: vehicule.id}) }}"><i class="fa-solid fa-trash-can text-danger" onclick="return confirm('Êtes vous sur de vouloir supprimer l\'vehicule?')"></i></a>
            </td>
      </tr>
{% endfor %}

{% endblock content %}